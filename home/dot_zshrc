export ZSH="$HOME/.oh-my-zsh"
# Defualt: ZSH_CUSTOM="$ZSH/custom"

ZSH_THEME="fishy"

# oh my zsh settings
zstyle ':omz:update' mode reminder  # just remind me to update when it's time
zstyle ':omz:update' frequency 15
COMPLETION_WAITING_DOTS="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"

plugins=(git zsh-autosuggestions fzf jump autojump kubectl)

source $ZSH/oh-my-zsh.sh

alias r='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"'
export EDITOR=vim

CONFIG_FILES_PATH=$HOME/.kube/config-files
if [[ -d $CONFIG_FILES_PATH ]]
then
	export KUBECONFIG=$(find $CONFIG_FILES_PATH -type f | xargs | sed -e 's/ /:/g')
fi

alias watchkgetpod='watch -n 1 kubectl get pod'
alias watchkgetall='watch -n 5 kubectl get all'
