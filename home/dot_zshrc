export ZSH="$HOME/.oh-my-zsh"
export ZSH_THEME="fishy"
# oh my zsh settings
zstyle ':omz:update' mode reminder  # just remind me to update when it's time
zstyle ':omz:update' frequency 15
COMPLETION_WAITING_DOTS="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"
plugins=(git zsh-autosuggestions fzf jump autojump kubectl)
source $ZSH/oh-my-zsh.sh

# custom configs
# fishy theme without username & hostname
export PS1='%{$fg[$user_color]%}$(_fishy_collapsed_wd)%{$reset_color%}%(!.#.>) '
export EDITOR=vim
bindkey '^v' edit-command-line

# alias
v(){
	cat - > $1; goland $1
}

r(){
	ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"
}

watch_k_get_pod() {
	watch -n 1 kubectl get pod
}

watch_k_get_all(){
	watch -n 5 kubectl get all
}

k_remove_finalizers() {
	kubectl patch -p '{"metadata":{"finalizers":null}}' --type=merge $1 $2
}

merge_kube_configs() {
	KUBECONFIG=$(find $PWD -type f | xargs | sed -e 's/ /:/g') kubectl config view --flatten > $HOME/.kube/config
}

