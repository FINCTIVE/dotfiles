export ZSH="$HOME/.oh-my-zsh"
# Defualt: ZSH_CUSTOM="$ZSH/custom"

ZSH_THEME="fishy"

# oh my zsh settings
zstyle ':omz:update' mode reminder  # just remind me to update when it's time
zstyle ':omz:update' frequency 15
COMPLETION_WAITING_DOTS="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"

plugins=(git zsh-autosuggestions fzf jump autojump kubectl kube-ps1)

source $ZSH/oh-my-zsh.sh

alias r='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"'
export EDITOR=vim

KUBE_PS1_PREFIX="["
KUBE_PS1_SUFFIX="]"
PROMPT='$(kube_ps1)'$PROMPT

merge_kube_configs() {
	KUBECONFIG=$(find $PWD -type f | xargs | sed -e 's/ /:/g') kubectl config view --flatten > $HOME/.kube/config
}

alias watchkgetpod='watch -n 1 kubectl get pod'
alias watchkgetall='watch -n 5 kubectl get all'
