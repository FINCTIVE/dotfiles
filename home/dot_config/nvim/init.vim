syntax on                      " Enable syntax highlighting
set tabstop=4                  " Set the width of a tab to 4 spaces
set hlsearch                   " Highlight all instances of a searched term
set number                     " Display line numbers in the gutter
set clipboard=unnamed          " Allow Vim to access the system clipboard
set foldlevelstart=6           " Set the initial fold level when a file is opened
set foldmethod=indent          " Set the method of code folding based on indentation
