" copy to system clipboard
set clipboard=unnamedplus
set clipboard+=ideaput
" no sound
set visualbell
" plugins
set NERDTree

" NOTE: To find IDE Action name, enable "Track Action Ids"

nnoremap <C-P> :action NextTab<CR>
nnoremap <C-N> :action PreviousTab<CR>

nnoremap <leader>f :action ReformatCode<CR>
nnoremap <leader>x :action RunClass<CR>
nnoremap <leader>d :action DebugClass<CR>

" g for go, moving
nnoremap <leader>gf :action SelectInProjectView<CR>
nnoremap <leader>gg :action GotoFile<CR>
nnoremap <leader>gs :action FileStructurePopup<CR>
nnoremap <leader>gt :action Terminal.OpenInTerminal<CR>
nnoremap <leader>gi :action GotoImplementation<CR>
nnoremap <leader>gu :action GotoSuperMethod<CR>
nnoremap <leader>gx :action ChooseRunConfiguration<CR>

" r for refactor
nnoremap <Leader>rn :action RenameElement<CR>
nnoremap <leader>ru :action FindUsages<CR>

" e for error
nnoremap <leader>en :action GotoNextError<CR>
nnoremap <leader>eN :action GotoPreviousError<CR>
nnoremap <leader>ee :action ShowIntentionActions<CR>
nnoremap <leader>et :action ActivateProblemsViewToolWindow<CR>

" v for view
nnoremap <leader>vt :action ChangeLaf<CR>
nnoremap <leader>vz :action ToggleZenMode<CR>
nnoremap <leader>vf :action ToggleFullScreen<CR>
nnoremap <leader>vr :source ~/.ideavimrc
