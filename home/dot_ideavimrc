set ideajoin
" system clipboard
set clipboard=unnamedplus
set clipboard+=ideaput
" no sound
set visualbell
" plugins
set NERDTree
" search
set smartcase
set hlsearch

nnoremap / :action Replace<CR>

nnoremap <leader>q :action HideActiveWindow<CR>
nnoremap <leader>t :action Terminal.OpenInTerminal<CR>
nnoremap <leader>f :action ReformatCode<CR>
nnoremap <leader>b :action ToggleLineBreakpoint<CR>


" tab
nnoremap <C-P> :action NextTab<CR>
nnoremap <C-N> :action PreviousTab<CR>


" debugger
nnoremap <C-I> :action StepOut<CR>
nnoremap <C-K> :action StepInto<CR>
nnoremap <C-J> :action Resume<CR>
nnoremap <C-L> :action StepOver<CR>


" e => error / execute
nnoremap <leader>en :action GotoNextError<CR>
nnoremap <leader>eN :action GotoPreviousError<CR>
nnoremap <leader>ei :action ShowIntentionActions<CR>

nnoremap <leader>ee :action RunClass<CR>
nnoremap <leader>er :action DebugClass<CR>
nnoremap <leader>ew :action RunCoverage<CR>
nnoremap <leader>ef :action ChooseRunConfiguration<CR>
nnoremap <leader>eq :action Stop<CR>


" r => refactor
nnoremap <Leader>rn :action RenameElement<CR>
nnoremap <leader>ru :action FindUsages<CR>
nnoremap <leader>rr :action Refactorings.QuickListPopupAction<CR>


" g => go
nnoremap <leader>gg :action SearchEverywhere<CR>
nnoremap <leader>gj :action FindInPath<CR>
nnoremap <leader>gr :action RecentLocations<CR>

nnoremap <leader>gi :action GotoImplementation<CR>
nnoremap <leader>gu :action GotoSuperMethod<CR>

nnoremap <leader>gf :action SelectInProjectView<CR>
nnoremap <leader>gs :action FileStructurePopup<CR>
nnoremap <leader>gh :action Vcs.ShowTabbedFileHistory<CR>

nnoremap <leader>gv :e ~/.ideavimrc<CR>
